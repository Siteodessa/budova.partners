<style>
div#example1_filter {
    float:  right;
}span.add_new_obj {
    margin: 0 6px;
}td.sorting_1 {
    text-align: center;
}td {
    max-width: 120px;    word-wrap: break-word;
}i.fa.fa-eye {
    text-align:  center;
    display:  block;
}
td.controls span {
    width: 20px;
    background: #fff;
    display:  block;
    height: 20px;
    margin: 4px 0;
    padding: 1px 4px 1px;
    color: #444;
    cursor:  pointer;
    transition:  .4s;
    border-radius:  2px;
}
td.controls {
    padding:  0;
}
td.controls span:hover {
    background: #337ab7;
    color:  #fff;
}
img.obj {
  min-width: 60px;
      padding: 0;
      width: auto;
      height: auto;
      min-height: 60px;
      max-height: 60px;
      margin: 0 -3px;
      max-width: 60px;
}.roundy {
    border-radius:  100%;
    overflow:  hidden;
    border: 2px solid #eee;
}</style>
<section class="content-header">
  <h1>
    Страницы
    <small>просмотр</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Главная</a></li>
    <li><a href="#">Страницы</a></li>
    <li class="active">Просмотр</li>
  </ol>
</section>
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">Все страницы</h3>
          <span class="add_new_obj">
            <% include ./add_new_page  %>
          </span>
        </div>
        <div class="box-body">
          <table id="example1" class="table table-bordered table-striped">
            <thead>
            <tr>
              <th>Фото</th>
              <th>Заголовок</th>

              <th><i class="fa fa-cogs"></i></th>
            </tr>
            </thead>
            <tbody>
 <% content.forEach(function(obj){    %>
 <% if (obj.note_type.includes('Страница')) { %>


  <tr id="<%= obj._id %>">
 <td> <a href="/doma/<%= obj.page_link %>">
   <% if (!obj.home_background || obj.home_background == 'undefined') { %>
     <i class="big fa fa-image"></i>
<%   }  else {%>
  <img class="obj" src="/uploads/<%= obj.home_background %>" alt="page_main_image">
<% }%>
 </a><i class="fa fa-eye"><%= obj.counter %></i></td>
 <td> <%= obj.title %></td>

 <td class="controls">
    <a class="elems trash">
      <span> <i class="fa fa-trash" id="<%= obj._id %>"></i> </span>
      </a>
      <a class="elems edit">
      <span><i class="fa fa-edit"  id="<%= obj._id %>"></i></span>
    </a>
      <a href="/doma/<%= obj.page_link %>" class="elems location">
      <span><i class="fa fa-location-arrow"  id="<%= obj._id %>"></i></span>
    </a>


 </td>
               </tr>
                 <% }   %>
 <% }); %>
            </tbody>
            <tfoot>
            <tr>
              <th>Фото</th>
              <th>Заголовок</th>

              <th><i class="fa fa-cogs"></i></th>
            </tr>
            </tfoot>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
